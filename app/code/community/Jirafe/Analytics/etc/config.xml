<?xml version="1.0"?>
<config>
    <modules>
        <Jirafe_Analytics>
            <version>0.0.3</version>
        </Jirafe_Analytics>
    </modules>
    <global>
        <models>
            <jirafe_analytics>
                <class>Jirafe_Analytics_Model</class>
                <resourceModel>jirafe_analytics_resource</resourceModel>
            </jirafe_analytics>
            <jirafe_analytics_resource>
                <class>Jirafe_Analytics_Model_Resource</class>
                <entities>
                    <queue>
                        <table>jirafe_analytics_queue</table>
                    </queue>
                    <queue_attempt>
                        <table>jirafe_analytics_queue_attempt</table>
                    </queue_attempt>
                    <queue_error>
                        <table>jirafe_analytics_queue_error</table>
                    </queue_error>
                    <queue_type>
                        <table>jirafe_analytics_queue_type</table>
                    </queue_type>
                </entities>
            </jirafe_analytics_resource>
            <admin>
                <rewrite>
                    <user>Jirafe_Analytics_Model_Admin_User</user>
                </rewrite>
            </admin>
        </models>
        <helpers>
            <jirafe_analytics>
                <class>Jirafe_Analytics_Helper</class>
            </jirafe_analytics>
        </helpers>
        <resources>
            <jirafe_analytics_setup>
                <setup>
                    <module>Jirafe_Analytics</module>
                    <class>Jirafe_Analytics_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </jirafe_analytics_setup>
            <jirafe_analytics_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </jirafe_analytics_write>
            <jirafe_analytics_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </jirafe_analytics_read>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <jirafe_analytics>
                    <file>jirafe_analytics.xml</file>
                </jirafe_analytics>
            </updates>
        </layout>
        <events>
            <checkout_cart_save_after>
                <observers>
                    <jirafe_analytics_checkout_cart_save_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>cartSave</method>
                    </jirafe_analytics_checkout_cart_save_after>
                </observers>
            </checkout_cart_save_after>
             <sales_quote_item_save_after>
                <observers>
                    <jirafe_analytics_sales_quote_item_save_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>cartUpdateItem</method>
                    </jirafe_analytics_sales_quote_item_save_after>
                </observers>
            </sales_quote_item_save_after>
            <sales_quote_remove_item>
                <observers>
                    <jirafe_analytics_sales_quote_remove_item>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>cartRemoveItem</method>
                    </jirafe_analytics_sales_quote_remove_item>
                </observers>
            </sales_quote_remove_item>
            <customer_register_success>
                <observers>
                    <jirafe_analytics_customer_register_success>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>customerRegister</method>
                    </jirafe_analytics_customer_register_success>
                </observers>
            </customer_register_success>
            <customer_save_after>
                <observers>
                    <jirafe_analytics_customer_save_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>customerSave</method>
                    </jirafe_analytics_customer_save_after>
                </observers>
            </customer_save_after>
            <customer_load_after>
                <observers>
                    <jirafe_analytics_customer_load_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>customerLoad</method>
                    </jirafe_analytics_customer_load_after>
                </observers>
            </customer_load_after>
            <sales_order_place_after>
                <observers>
                    <jirafe_analytics_sales_order_place_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>orderSave</method>
                    </jirafe_analytics_sales_order_place_after>
                </observers>
            </sales_order_place_after>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <catalog_category_save_after>
                <observers>
                    <jirafe_analytics_action_catalog_category_save_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>categorySave</method>
                    </jirafe_analytics_action_catalog_category_save_after>
                </observers>
            </catalog_category_save_after>
            <catalog_category_change_products>
                <observers>
                    <jirafe_analytics_action_category_change_products>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>categoryChangeProducts</method>
                    </jirafe_analytics_action_category_change_products>
                </observers>
            </catalog_category_change_products>
            <catalog_controller_category_delete>
                <observers>
                    <jirafe_analytics_action_category_delete>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>categoryDelete</method>
                    </jirafe_analytics_action_category_delete>
                </observers>
            </catalog_controller_category_delete>
            <catalog_product_save_after>
                <observers>
                    <jirafe_analytics_action_product_save>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>productSave</method>
                    </jirafe_analytics_action_product_save>
                </observers>
            </catalog_product_save_after>
            <catalog_product_status_update>
                <observers>
                    <jirafe_analytics_action_product_status_update>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>productStatusUpdate</method>
                    </jirafe_analytics_action_product_status_update>
                </observers>
            </catalog_product_status_update>
            <catalog_product_delete_before>
                <observers>
                    <jirafe_analytics_action_catalog_product_delete_before>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>productDelete</method>
                    </jirafe_analytics_action_catalog_product_delete_before>
                </observers>
            </catalog_product_delete_before>
            <sales_order_save_after>
                <observers>
                    <jirafe_analytics_sales_order_place_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>orderSave</method>
                    </jirafe_analytics_sales_order_place_after>
                </observers>
            </sales_order_save_after>
            <order_cancel_after>
                <observers>
                    <jirafe_analytics_action_order_cancel>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>orderCancel</method>
                    </jirafe_analytics_action_order_cancel>
                </observers>
            </order_cancel_after>
            <customer_load_after>
                <observers>
                    <jirafe_analytics_customer_load_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>customerLoad</method>
                    </jirafe_analytics_customer_load_after>
                </observers>
            </customer_load_after>
            <adminhtml_customer_save_after>
                <observers>
                    <jirafe_analytics_customer_save_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>adminCustomerSave</method>
                    </jirafe_analytics_customer_save_after>
                </observers>
            </adminhtml_customer_save_after>
            <admin_user_save_after>
                <observers>
                    <jirafe_analytics_admin_user_save_after>
                        <type>singleton</type>
                        <class>Jirafe_Analytics_Model_Observer</class>
                        <method>employeeSave</method>
                    </jirafe_analytics_admin_user_save_after>
                </observers>
            </admin_user_save_after>
        </events>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <jirafe>
                                            <title>Jirafe Analytics Section</title>
                                        </jirafe>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
     <crontab>
        <jobs>
            <jirafe_analytics_process_queue>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>jirafe_analytics/queue::process</model>
                </run>
            </jirafe_analytics_process_queue>
        </jobs>
    </crontab>
</config>